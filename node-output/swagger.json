                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "ConversionRequest" : {
        "required" : [ "AccountCurrency", "AccountId", "CarrierCurrency", "CarrierId" ],
        "type" : "object",
        "properties" : {
          "AccountCurrency" : {
            "type" : "string",
            "description" : "currency to be converted to",
            "example" : "GBP"
          },
          "CarrierCurrency" : {
            "type" : "string",
            "description" : "currency to be converted from",
            "example" : "EUR"
          },
          "AccountId" : {
            "type" : "string",
            "example" : "dd54dedf-6b59-4462-bb19-073f41c8fb3f"
          },
          "CarrierId" : {
            "type" : "string",
            "example" : "8d699cd2-931e-4ea7-b48f-3f421ce987eb"
          }
        }
      },
      "UpdateConversionRequest" : {
        "required" : [ "BaseCurrency", "CreatedAt", "IsActive", "OperationalCurrency" ],
        "type" : "object",
        "properties" : {
          "IsActive" : {
            "type" : "boolean"
          }
        },
        "allOf" : [ {
          "$ref" : "#/components/schemas/ConversionRequest"
        } ]
      },
      "RateResponse" : {
        "properties" : {
          "RequestedDate" : {
            "type" : "string",
            "example" : "12-01-2022"
          },
          "BaseCurrency" : {
            "type" : "string",
            "example" : "EUR"
          },
          "Rates" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Rate"
            }
          }
        }
      },
      "Rate" : {
        "properties" : {
          "CurrencyCode" : {
            "type" : "string",
            "example" : "GBP"
          },
          "Value" : {
            "type" : "number",
            "example" : 1.85
          }
        }
      },
      "HistoricalRatesResponse" : {
        "properties" : {
          "DateFrom" : {
            "type" : "string",
            "example" : "12-01-2022"
          },
          "DateTo" : {
            "type" : "string",
            "example" : "12-02-2022"
          },
          "BaseCurrency" : {
            "type" : "string",
            "example" : "EUR"
          },
          "Rates" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/HistoricalRate"
            }
          }
        }
      },
      "HistoricalRate" : {
        "properties" : {
          "ExchangeDate" : {
            "type" : "string",
            "example" : "12-01-2022"
          },
          "CurrencyCode" : {
            "type" : "string",
            "example" : "GBP"
          },
          "Value" : {
            "type" : "number",
            "example" : 1.85
          }
        }
      },
      "ConvertRersult" : {
        "properties" : {
          "CurrencyCode" : {
            "type" : "string",
            "example" : "USD"
          },
          "Value" : {
            "type" : "number",
            "example" : 11.85
          },
          "Rate" : {
            "type" : "number",
            "example" : 1.185
          },
          "ExchangeDateUsed" : {
            "type" : "string",
            "example" : "12-01-2022"
          },
          "IsActual" : {
            "type" : "boolean"
          }
        }
      },
      "Conversion" : {
        "required" : [ "AccountCurrency", "Accounts", "CarrierCurrency", "Carriers", "CreatedAt" ],
        "properties" : {
          "AccountCurrency" : {
            "type" : "string",
            "description" : "currency to be converted to",
            "example" : "GBP"
          },
          "CarrierCurrency" : {
            "type" : "string",
            "description" : "currency to be converted from",
            "example" : "EUR"
          },
          "CreatedAt" : {
            "type" : "string",
            "example" : "12-01-2021"
          },
          "UpdatedAt" : {
            "type" : "string",
            "example" : "12-02-2021"
          },
          "Accounts" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "description" : "array of AccountId used Account as base one"
            }
          },
          "Carriers" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "description" : "array of CarrierId used Carrier as base one"
            }
          },
          "IsActive" : {
            "type" : "boolean",
            "description" : "A flag that means we actual rates synchronization enabled for this configuration. When Carriers or Accounts array becomes empty IsActive: false",
            "example" : true
          }
        }
      },
      "ApiError" : {
        "type" : "object",
        "properties" : {
          "errorCode" : {
            "type" : "string",
            "example" : "C-530"
          },
          "errorMessage" : {
            "type" : "string",
            "example" : "Service is temporarily unavailable"
          }
        }
      },
      "ApiResponse" : {
        "type" : "object",
        "properties" : {
          "code" : {
            "type" : "integer",
            "format" : "int32"
          },
          "message" : {
            "type" : "string"
          },
          "sucess" : {
            "type" : "boolean"
          },
          "erros" : {
            "type" : "array",
            "items" : {
              "type" : "object"
            }
          }
        }
      },
      "ApiResponseWithError" : {
        "type" : "object",
        "properties" : {
          "code" : {
            "type" : "integer",
            "format" : "int32"
          },
          "message" : {
            "type" : "string"
          },
          "sucess" : {
            "type" : "boolean"
          },
          "erros" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/ApiError"
            }
          }
        }
      }
    },
    "requestBodies" : {
      "ConversionRequest" : {
        "description" : "Convertion object that needs to be added",
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/ConversionRequest"
            }
          }
        },
        "required" : true
      },
      "UpdateConversionRequest" : {
        "description" : "Convertion object that needs to be updated",
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/UpdateConversionRequest"
            }
          }
        },
        "required" : true
      }
    }
  }
}