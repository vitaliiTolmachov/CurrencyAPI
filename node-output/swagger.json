    "/rates" : {
      "get" : {
        "tags" : [ "rates" ],
        "summary" : "Get rates for base currency",
        "operationId" : "getRates",
        "parameters" : [ {
          "name" : "ConverTo",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          }
        }, {
          "name" : "ConvertFrom",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "Date",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "MM-DD-YYYY"
          }
        } ],
        "responses" : {
          "500" : {
            "description" : "Operation with error",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ApiResponseWithError"
                }
              }
            }
          },
          "200" : {
            "description" : "successful operation",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/RateResponse"
                }
              }
            }
          }
        }
      }
    },
    "/rates/convert" : {
      "get" : {
        "tags" : [ "rates" ],
        "summary" : "Converts specified amount in base currency to operational currency",
        "operationId" : "convert",
        "parameters" : [ {
          "name" : "ConvertFrom",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "Amount",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "number",
            "format" : "double"
          }
        }, {
          "name" : "ConverTo",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "Date",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "MM-DD-YYYY"
          }
        } ],
        "responses" : {
          "500" : {
            "description" : "Operation with error",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ApiResponseWithError"
                }
              }
            }
          },
          "200" : {
            "description" : "successful operation",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/HistoricalRatesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/rates/history" : {
      "get" : {
        "tags" : [ "rates" ],
        "summary" : "Show rates in operational currency comparing to base currency for date range",
        "operationId" : "ratesHistory",
        "parameters" : [ {
          "name" : "ConvertFrom",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "DateFrom",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "MM-DD-YYYY"
          }
        }, {
          "name" : "DateTo",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "MM-DD-YYYY"
          }
        }, {
          "name" : "ConvertTo",
          "in" : "query",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          }
        } ],
        "responses" : {
          "500" : {
            "description" : "Operation with error",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ApiResponseWithError"
                }
              }
            }
          },
          "200" : {
            "description" : "successful operation",
            "content" : {
